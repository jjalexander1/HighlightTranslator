{
  "manifest_version": 3,
  "name": "Highlight Translator",
  "version": "1.1",
  "description": "Automatically translates highlighted text and shows a popup.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}